<h2><%= t('.header') %></h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.level') %></th>
        <th><%= t('.category_id') %></th>
        <th><%= t('.questions') %></th>
        <th><%= t('.timer') %></th>
        <th><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
</div>

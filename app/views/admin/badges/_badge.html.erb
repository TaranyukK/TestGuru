<tr>
  <td class="align-middle"><%= image_tag(badge.image_url, width: "15%") %></td>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.option %></td>
  <td class="align-middle"><%= link_to t('actions.show'), admin_badge_path(badge), class: 'btn btn-info btn-sm' %></td>
  <td class="align-middle"><%= link_to t('actions.edit'), edit_admin_badge_path(badge), class: 'btn btn-warning btn-sm' %></td>
  <td class="align-middle">
    <%= link_to t('actions.delete'), admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('actions.confirmation') },
                class: 'btn btn-danger btn-sm'
    %>
  </td>
</tr>

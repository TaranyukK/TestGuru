</p>

<%= render 'shared/errors', resource: @badge %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.image_url') %></th>
      <th><%= t('.title') %></th>
      <th><%= t('.rule') %></th>
      <th><%= t('.option') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @badges %>
  </tbody>
</table>

<div class="mb-3">
  <strong><%= t('.title') %>:</strong>
  <%= @test.title %>
</div>

<div class="mb-3">
  <strong><%= t('.level') %>:</strong>
  <%= @test.level %>
</div>

<div class="mb-3">
  <strong><%= t('.category_id') %>:</strong>
  <%= @test.category.title %>
</div>

<div class="mb-3">
  <strong><%= @test.questions.present? ? t('.questions') : t('.no_questions') %></strong>
</div>

<p>
  <%= link_to t('.new_question'), new_admin_test_question_path(@test), class: 'btn btn-primary mb-3' %>
</p>

<% if @test.questions.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('.question_body') %></th>
        <th colspan="3"><%= t('.question_actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @test.questions %>
    </tbody>
  </table>
<% end %>

<div>
  <%= link_to t('navigation.edit'), edit_admin_test_path(@test), class: 'btn btn-warning' %>
  <%= link_to t('navigation.back'), admin_tests_path, class: 'btn btn-secondary' %>
</div>

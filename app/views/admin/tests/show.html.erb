<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Category:</strong>
  <%= @test.category.title %>
</p>

<p>
  <strong><%= @test.questions.present? ? 'Questions:' : 'There is no questions' %></strong>
</p>

<p>
  <%= link_to 'New question', new_admin_test_question_path(@test) %>
</p>

<% if @test.questions.present? %>
  <table>
    <tr>
      <th>Body</th>
      <th colspan="3">Actions</th>
    </tr>

    <%= render @test.questions %>
  </table>
<% end %>

<%= link_to 'Edit', edit_admin_test_path(@test) %> |
<%= link_to 'Back', admin_tests_path %>

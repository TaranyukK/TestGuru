<p>
  <strong><%= t('.title') %>:</strong>
  <%= @test.title %>
</p>

<p>
  <strong><%= t('.level') %>:</strong>
  <%= @test.level %>
</p>

<p>
  <strong><%= t('.category_id') %>:</strong>
  <%= @test.category.title %>
</p>

<p>
  <strong><%= @test.questions.present? ? t('.questions') : t('.no_questions') %></strong>
</p>

<p>
  <%= link_to t('.new_question'), new_admin_test_question_path(@test) %>
</p>

<% if @test.questions.present? %>
  <table>
    <tr>
      <th><%= t('.question_body') %></th>
      <th colspan="3"><%= t('.question_actions') %></th>
    </tr>

    <%= render @test.questions %>
  </table>
<% end %>

<%= link_to t('navigation.edit'), edit_admin_test_path(@test) %> |
<%= link_to t('navigation.back'), admin_tests_path %>

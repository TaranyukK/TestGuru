<%= form_with model: [:admin, @test], local: true, class: 'form-horizontal' do |f| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :level, class: 'form-label' %>
    <%= f.number_field :level, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :category, class: 'form-label' %>
    <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= f.label :timer, class: 'form-label' %>
    <%= f.number_field :timer, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= form_with model: [:admin, @question, @answer], local: true, class: 'form-horizontal' do |f| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="mb-3">
    <%= f.label :body, class: 'form-label' %>
    <%= f.text_area :body, rows: 7, class: 'form-control' %>
  </div>

  <div class="mb-3 form-check">
    <%= f.label :correct, class: 'form-check-label' %>
    <%= f.check_box :correct, class: 'form-check-input' %>
  </div>

  <div class="mb-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

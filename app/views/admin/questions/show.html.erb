<p>
  <strong><%= t('.body') %>:</strong>
  <%= @question.body %>
</p>

<p>
  <strong><%= @question.answers.present? ? t('.answers') : t('.no_answers') %></strong>
</p>

<p>
  <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
</p>

<% if @question.answers.present? %>
  <table>
    <tr>
      <th><%= t('.answer_body') %></th>
      <th><%= t('.answer_correct') %></th>
      <th colspan="3"><%= t('.answer_actions') %></th>
    </tr>

    <%= render @question.answers %>
  </table>
<% end %>

<%= link_to t('navigation.edit'), edit_admin_question_path(@question) %> |
<%= link_to t('navigation.back'), admin_test_path(@question.test) %>

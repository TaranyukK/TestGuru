<div class="mb-3">
  <strong><%= t('.body') %>:</strong>
  <%= @question.body %>
</div>

<div class="mb-3">
  <strong><%= @question.answers.present? ? t('.answers') : t('.no_answers') %></strong>
</div>

<p>
  <%= link_to t('.new_answer'), new_admin_question_answer_path(@question), class: 'btn btn-primary mb-3' %>
</p>

<% if @question.answers.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('.answer_body') %></th>
        <th><%= t('.answer_correct') %></th>
        <th colspan="3"><%= t('.answer_actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @question.answers %>
    </tbody>
  </table>
<% end %>

<div>
  <%= link_to t('navigation.edit'), edit_admin_question_path(@question), class: 'btn btn-warning' %>
  <%= link_to t('navigation.back'), admin_test_path(@question.test), class: 'btn btn-secondary' %>
</div>

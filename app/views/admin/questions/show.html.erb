<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong><%= @question.answers.present? ? 'Answers:' : 'There is no answers' %></strong>
</p>

<p>
  <%= link_to 'New answer', new_admin_question_answer_path(@question) %>
</p>

<% if @question.answers.present? %>
  <table>
    <tr>
      <th>Body</th>
      <th>Correct</th>
      <th colspan="3">Actions</th>
    </tr>

    <%= render @question.answers %>
  </table>
<% end %>

<%= link_to 'Edit', edit_admin_question_path(@question) %> |
<%= link_to 'Back', admin_test_path(@question.test) %>

<tr>
  <td><%= question.body %></td>
  <td><%= link_to t('actions.show'), admin_question_path(question), class: 'btn btn-info btn-sm' %></td>
  <td><%= link_to t('actions.edit'), edit_admin_question_path(question), class: 'btn btn-warning btn-sm' %></td>
  <td>
    <%= link_to t('actions.delete'), admin_question_path(question),
                method: :delete,
                data: { confirm: t('actions.confirmation') },
                class: 'btn btn-danger btn-sm'
    %>
  </td>
</tr>

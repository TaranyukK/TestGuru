<%= form_with model: @feedback, local: true, class: 'form-horizontal' do |f| %>
  <%= render 'shared/errors', resource: @feedback %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, rows: 7, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :body, class: 'form-label' %>
    <%= f.text_area :body, rows: 7, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
